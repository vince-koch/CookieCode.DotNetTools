<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net8.0</TargetFramework>
        <AssemblyName>cct</AssemblyName>
        <ApplicationIcon>cookie.ico</ApplicationIcon>
        <PackageId>CookieCode.DotNetTools</PackageId>
        <Version>0.1.0.0</Version>
    </PropertyGroup>

    <PropertyGroup>
        <PackAsTool>true</PackAsTool>
        <ToolCommandName>cct</ToolCommandName>
        <PackageOutputPath>../.nupkg</PackageOutputPath>
        <PackageProjectUrl>https://github.com/vince-koch/DotNetTools</PackageProjectUrl>
        <RepositoryUrl>https://github.com/vince-koch/DotNetTools</RepositoryUrl>
        <Description>A collection of tools to make life a little easier</Description>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageIcon>cookie.png</PackageIcon>
        <PackageIconUrl />
        <Company>Cookie Code</Company>
        <Authors>Vince Koch</Authors>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageTags>dotnet tool alias bump-version cleanup fix-namespace fix-project-refs handle pack prune send-http unzip zip zip-publish zip-source</PackageTags>
    </PropertyGroup>
    
    <ItemGroup>
        <None Include="cookie.png">
            <Pack>True</Pack>
            <PackagePath></PackagePath>
        </None>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="CliWrap" Version="3.6.7" />
        <PackageReference Include="CommandLineParser" Version="2.8.0" />
        <PackageReference Include="MAB.DotIgnore" Version="3.0.2" />
        <PackageReference Include="NuGet.Protocol" Version="5.11.0" />
        <PackageReference Include="Spectre.Console" Version="0.49.1" />
        <PackageReference Include="Spectre.Console.Cli" Version="0.49.1" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Commands\Switch\" />
      <Folder Include="Commands\Test\" />
    </ItemGroup>


</Project>