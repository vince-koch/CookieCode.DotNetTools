<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net5.0</TargetFramework>
        <PackAsTool>true</PackAsTool>
        <ToolCommandName>zip-source</ToolCommandName>
        <PackageOutputPath>../.nupkg</PackageOutputPath>
        <AssemblyName>dotnet-zip-source</AssemblyName>
        <ApplicationIcon>cookie.ico</ApplicationIcon>
        <PackageProjectUrl>https://github.com/vince-koch/DotNetTools</PackageProjectUrl>
        <RepositoryUrl>https://github.com/vince-koch/DotNetTools</RepositoryUrl>
        <Description>Once this tool is installed you can run ```dotnet zip-source``` to quickly zip your project source files which git does not ignore.</Description>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageIcon>cookie.png</PackageIcon>
        <PackageIconUrl />
        <Authors>Vince Koch</Authors>
        <Company>Cookie Code</Company>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageTags>dotnet tool zip source git .gitignore</PackageTags>
        <Version>1.0.0</Version>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
        <OutputPath></OutputPath>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="CommandLineParser" Version="2.8.0" />
        <PackageReference Include="MAB.DotIgnore" Version="3.0.2" />
    </ItemGroup>

    <ItemGroup>
        <None Include="..\cookie.png">
            <Pack>True</Pack>
            <PackagePath></PackagePath>
        </None>
    </ItemGroup>

</Project>
